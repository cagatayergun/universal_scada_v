@inherits LayoutComponentBase
@using TekstilScada.WebApp.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using MudBlazor
@using System.Security.Claims
@using TekstilScada.WebApp.Components.Shared
@using TekstilScada.Core.Localization
@using Microsoft.Extensions.Localization

@inject TekstilScada.WebApp.Services.ScadaDataService ScadaService
@inject CustomAuthStateProvider AuthProvider
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject IStringLocalizer<SharedResource> Loc
@inject ISnackbar Snackbar
@implements IDisposable

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AlarmBanner />
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="MudBlazor.Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Universal Scada</MudText>

        <MudSpacer />

        <LanguageSwitcher />

        <AuthorizeView>
            <Authorized>
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="ml-4">
                    <MudText Typo="Typo.body2"><b>@context.User.Identity?.Name</b></MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="MudBlazor.Color.Inherit" OnClick="HandleLogout" Title="@Loc["CikisYap"]" />
                </MudStack>
            </Authorized>
            <NotAuthorized>
                <MudButton Variant="Variant.Filled" Color="MudBlazor.Color.Secondary" Link="/login" Class="ml-4">@Loc["GirisYap"]</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private bool _isInitialized = false;
    private int _currentUserId = 0;
    private HashSet<int> _machinesWithAlarm = new();

    // --- 1. GÜNCELLENMİŞ İZİNLİ SAYFALAR LİSTESİ ---
    // Buraya "portal" ve "admin" sayfalarını da ekledik.
    // Artık bu sayfalar fabrika seçimi kontrolüne takılmayacak.
    private readonly string[] _publicPages = new[]
    {
        "select-factory",
        "login",
        "logout",
        "portal",  // YENİ EKLENDİ
        "admin"    // YENİ EKLENDİ
    };

    protected override async Task OnInitializedAsync()
    {
        if (!_isInitialized)
        {
            await GetCurrentUserAsync();
            NavigationManager.LocationChanged += HandleLocationChanged;
            ScadaService.OnDataUpdated += CheckAlarms;
            _isInitialized = true;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ScadaService.InitializeAsync();

            // Güvenlik Kontrolü
            CheckFactorySelection();

            if (ScadaService.HubConnection != null)
            {
                ScadaService.HubConnection.Closed += async (error) =>
                {
                    ScadaService.ExitFactory();
                    Snackbar.Add("Sunucu bağlantısı koptu! Fabrika seçim ekranına yönlendiriliyorsunuz.", Severity.Error, config =>
                    {
                        config.Icon = Icons.Material.Filled.WifiOff;
                        config.VisibleStateDuration = 5000;
                    });

                    await InvokeAsync(() =>
                    {
                        NavigationManager.NavigateTo("/select-factory");
                    });
                };
            }
        }
    }

    private async Task CheckFactorySelection()
    {
        var relativePath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri).ToLower();

        // 1. İzinli sayfalardaysak (Login, Logout vb.) kontrol etme
        if (_publicPages.Any(page => relativePath.StartsWith(page)))
        {
            return;
        }

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // --- 2. YENİ KURAL: Adminler User sayfalarında (MainLayout) gezemez ---
        if (user.IsInRole("SystemAdmin"))
        {
            // Admin paneline geri yolla
            NavigationManager.NavigateTo("/admin");
            return;
        }
        if (user.IsInRole("CompanyAdmin"))
        {
            // Şirket portalına geri yolla
            NavigationManager.NavigateTo("/portal");
            return;
        }
        // ----------------------------------------------------------------------

        // 3. Normal Kullanıcılar için Fabrika Seçimi Zorunluluğu (Aynen kalıyor)
        if (string.IsNullOrEmpty(ScadaService.CurrentFactoryName))
        {
            NavigationManager.NavigateTo("/select-factory");
        }
    }

    // ... (Geri kalan metotlar: CheckAlarms, DrawerToggle, HandleLogout, GetCurrentUserAsync, HandleLocationChanged, Dispose aynı kalacak) ...

    private void CheckAlarms()
    {
        foreach (var machine in ScadaService.MachineData.Values)
        {
            if (machine.HasActiveAlarm && !_machinesWithAlarm.Contains(machine.MachineId))
            {
                _machinesWithAlarm.Add(machine.MachineId);
                string format = Loc["AlarmBalonMesaji"] ?? "{0} makinesinde alarm: {1}";
                string msg = string.Format(format, machine.MachineName, machine.ActiveAlarmNumber);

                Snackbar.Add(msg, Severity.Error, config =>
                {
                    config.Icon = Icons.Material.Filled.Warning;
                    config.ShowCloseIcon = true;
                    config.VisibleStateDuration = 10000;
                });
            }
            else if (!machine.HasActiveAlarm && _machinesWithAlarm.Contains(machine.MachineId))
            {
                _machinesWithAlarm.Remove(machine.MachineId);
                string format = Loc["AlarmGiderildiMesaji"] ?? "{0} makinesindeki alarm düzeldi.";
                string msg = string.Format(format, machine.MachineName);

                Snackbar.Add(msg, Severity.Success);
            }
        }
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task HandleLogout()
    {
        if (_currentUserId > 0)
        {
            await ScadaService.LogUserActionAsync(_currentUserId, "Oturum Kapatma", "Kullanıcı çıkış yaptı.");
        }

        await AuthProvider.LogoutAsync();
        NavigationManager.NavigateTo("/login", forceLoad: true);
    }

    private async Task GetCurrentUserAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var idClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            if (idClaim != null && int.TryParse(idClaim.Value, out int id))
            {
                _currentUserId = id;
            }
        }
        else
        {
            _currentUserId = 0;
        }
    }

    private async void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await GetCurrentUserAsync();

        if (_currentUserId > 0)
        {
            var relativePath = NavigationManager.ToBaseRelativePath(e.Location);
            if (string.IsNullOrEmpty(relativePath)) relativePath = "Ana Sayfa";
            _ = ScadaService.LogUserActionAsync(_currentUserId, "Sayfa Ziyareti", $"Görüntülenen Sayfa: {relativePath}");
        }

        CheckFactorySelection();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= HandleLocationChanged;
        if (ScadaService != null)
        {
            ScadaService.OnDataUpdated -= CheckAlarms;
        }
    }
}