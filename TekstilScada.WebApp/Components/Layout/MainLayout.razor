@inherits LayoutComponentBase
@using TekstilScada.WebApp.Services
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using MudBlazor
@using System.Security.Claims
@using TekstilScada.WebApp.Components.Shared
@using TekstilScada.Core.Localization
@using Microsoft.Extensions.Localization

@inject CustomAuthStateProvider AuthProvider
@inject NavigationManager NavigationManager
@inject ScadaDataService ScadaService
@inject AuthenticationStateProvider AuthStateProvider
@inject IStringLocalizer<SharedResource> Loc
@implements IDisposable

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="MudBlazor.Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">YILMAK TELEMETRY</MudText>

        <MudSpacer />

        <!-- DİL SEÇİM BUTONU BURAYA EKLENDİ -->
        <LanguageSwitcher />
        <!-- ================================ -->

        <AuthorizeView>
            <Authorized>
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="ml-4">
                    <MudText Typo="Typo.body2"><b>@context.User.Identity?.Name</b></MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="MudBlazor.Color.Inherit" OnClick="HandleLogout" Title="@Loc["CikisYap"]" />
                </MudStack>
            </Authorized>
            <NotAuthorized>
                <MudButton Variant="Variant.Filled" Color="MudBlazor.Color.Secondary" Link="/login" Class="ml-4">@Loc["GirisYap"]</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private bool _isInitialized = false;
    private int _currentUserId = 0;

    protected override async Task OnInitializedAsync()
    {
        if (!_isInitialized)
        {
            await GetCurrentUserAsync();
            NavigationManager.LocationChanged += HandleLocationChanged;
            _isInitialized = true;
        }
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task HandleLogout()
    {
        if (_currentUserId > 0)
        {
            await ScadaService.LogUserActionAsync(_currentUserId, "Oturum Kapatma", "Kullanıcı çıkış yaptı.");
        }

        await AuthProvider.LogoutAsync();
        NavigationManager.NavigateTo("/login", forceLoad: true);
    }

    private async Task GetCurrentUserAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var idClaim = user.FindFirst(ClaimTypes.NameIdentifier);
            if (idClaim != null && int.TryParse(idClaim.Value, out int id))
            {
                _currentUserId = id;
            }
        }
        else
        {
            _currentUserId = 0;
        }
    }

    private async void HandleLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await GetCurrentUserAsync();

        if (_currentUserId > 0)
        {
            var relativePath = NavigationManager.ToBaseRelativePath(e.Location);
            if (string.IsNullOrEmpty(relativePath)) relativePath = "Ana Sayfa";
            _ = ScadaService.LogUserActionAsync(_currentUserId, "Sayfa Ziyareti", $"Görüntülenen Sayfa: {relativePath}");
        }
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= HandleLocationChanged;
    }
}