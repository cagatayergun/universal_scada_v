@using TekstilScada.Models

@using TekstilScada.WebApp.Services
@using TekstilScada.Core.Localization
@using Microsoft.Extensions.Localization
@inject ScadaDataService DataService
@inject IJSRuntime JSRuntime
@inject IStringLocalizer<SharedResource> Loc

@if (showEditModal && userToEdit != null)
{
    @* Modalı açarken Rolleri de gönderiyoruz *@
    <UserEditModal Model="userToEdit" Roles="rolesList" OnClose="() => showEditModal = false" OnSave="HandleSave" />
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>@Loc["KullaniciYonetimi"]</h4>
    <button class="btn btn-success" @onclick="AddNewUser">
        <i class="bi bi-person-plus-fill me-1"></i> @Loc["YeniKullanici"]
    </button>
</div>

@if (users == null)
{
    <p><em>@Loc["Yukleniyor"]</em></p>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Loc["AdSoyad"]</th>
                <th>@Loc["KullaniciAdi"]</th>
                <th>@Loc["Durum"]</th>
                <th class="text-end">@Loc["Islemler"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Username</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge bg-success">@Loc["Aktif"]</span>
                        }
                        else
                        {

                            <span class="badge bg-secondary">@Loc["Pasif"]</span>
                        }
                    </td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => EditUser(user)">@Loc["Duzenle"]</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user)">@Loc["Sil"]</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<User>? users;
    private List<Role>? rolesList;
    private UserViewModel? userToEdit;
    private bool showEditModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            users = await DataService.GetUsersAsync();
            rolesList = await DataService.GetRolesAsync();
        }
        catch (Exception ex)
        {
            //(ex.Message);
        }
    }

    private void AddNewUser()
    {
        userToEdit = new UserViewModel
        {
            IsActive = true,
            SelectedRoleIds = new List<int>() // Boş liste
        };
        showEditModal = true;
    }

    private void EditUser(User user)
    {
        userToEdit = new UserViewModel
        {
            Id = user.Id,
            Username = user.Username,
            FullName = user.FullName,
            IsActive = user.IsActive,
            Password = "", // Şifre güvenlik gereği boş gelir
            SelectedRoleIds = user.Roles != null
                              ? user.Roles.Select(r => r.Id).ToList()
                              : new List<int>()
        };
        showEditModal = true;
    }

    private async Task HandleSave(UserViewModel userVm)
    {
        try
        {
            if (userVm.Id == 0) await DataService.AddUserAsync(userVm);
            else await DataService.UpdateUserAsync(userVm);

            showEditModal = false;
            await LoadData();
        }
        catch (Exception ex) { await JSRuntime.InvokeVoidAsync("alert", $"{Loc["Hata"]}: {ex.Message}"); }
    }

    private async Task DeleteUser(User user)
    {
        string message = string.Format(Loc["KullaniciSilOnay"], user.Username);
        if (await JSRuntime.InvokeAsync<bool>("confirm", message))
        {
            await DataService.DeleteUserAsync(user.Id);
            await LoadData();
        }
    }
}