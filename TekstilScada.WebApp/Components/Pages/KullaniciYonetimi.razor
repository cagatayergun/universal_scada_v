@using TekstilScada.Models
@using TekstilScada.WebApp.Models
@using TekstilScada.WebApp.Services
@inject ScadaDataService DataService
@inject IJSRuntime JSRuntime

@if (showEditModal && userToEdit != null)
{
    @* Modalı açarken Rolleri de gönderiyoruz *@
    <UserEditModal Model="userToEdit" Roles="rolesList" OnClose="() => showEditModal = false" OnSave="HandleSave" />
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Kullanıcı Yönetimi</h4>
    <button class="btn btn-success" @onclick="AddNewUser">
        <i class="bi bi-person-plus-fill me-1"></i> Yeni Kullanıcı
    </button>
</div>

@if (users == null)
{
    <p><em>Yükleniyor...</em></p>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Ad Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>Durum</th>
                <th class="text-end">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Username</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {

                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => EditUser(user)">Düzenle</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteUser(user)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<User>? users;
    private List<Role>? rolesList;
    private UserViewModel? userToEdit;
    private bool showEditModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        users = await DataService.GetUsersAsync();
        rolesList = await DataService.GetRolesAsync(); // Rolleri de yüklüyoruz
    }

    private void AddNewUser()
    {
        userToEdit = new UserViewModel
        {
            IsActive = true,
            SelectedRoleIds = new List<int>() // Boş liste
        };
        showEditModal = true;
    }

    private void EditUser(User user)
    {
        // Mevcut User'ı ViewModel'e dönüştürüp forma gönderiyoruz
        // Not: User nesnesinde Roles listesi dolu geliyorsa ilkini seçili yapıyoruz.
        // GetAllUsers metodunda Roles gelmiyorsa burada ekstra bir API çağrısı gerekebilir,
        // ancak şimdilik basit varsayımla ilerliyoruz.
        userToEdit = new UserViewModel
        {
            Id = user.Id,
            Username = user.Username,
            FullName = user.FullName,
            IsActive = user.IsActive,
            Password = "", // Şifre güvenlik gereği boş gelir
            // Eğer kullanıcıda rol bilgisi varsa ilkini seçili yap
                           // DÜZELTME: Kullanıcının sahip olduğu rollerin ID'lerini alıp listeye atıyoruz
            SelectedRoleIds = user.Roles != null
                              ? user.Roles.Select(r => r.Id).ToList()
                              : new List<int>()
        };
        showEditModal = true;
    }

    private async Task HandleSave(UserViewModel userVm)
    {
        try
        {
            if (userVm.Id == 0) await DataService.AddUserAsync(userVm);
            else await DataService.UpdateUserAsync(userVm);

            showEditModal = false;
            await LoadData();
        }
        catch (Exception ex) { await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task DeleteUser(User user)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"{user.Username} silinsin mi?"))
        {
            await DataService.DeleteUserAsync(user.Id);
            await LoadData();
        }
    }
}