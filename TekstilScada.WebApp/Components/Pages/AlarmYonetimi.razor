@using TekstilScada.Models
@using TekstilScada.WebApp.Services
@inject ScadaDataService DataService
@inject IJSRuntime JSRuntime

@if (showEditModal && alarmToEdit != null)
{
    <AlarmEditModal Alarm="alarmToEdit" OnClose="() => showEditModal = false" OnSave="HandleSave" />
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Alarm Tanımları</h4>
    <button class="btn btn-success" @onclick="AddNewAlarm">
        <i class="bi bi-bell-fill me-1"></i> Yeni Alarm Ekle
    </button>
</div>

@if (alarms == null)
{
    <div class="text-center mt-4"><div class="spinner-border text-warning"></div><p>Alarmlar yükleniyor...</p></div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width: 100px;">No</th>
                    <th>Alarm Mesajı</th>
                    <th style="width: 120px;">Önem</th>
                    <th class="text-end" style="width: 180px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alarm in alarms)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@alarm.AlarmNumber</span></td>
                        <td>@alarm.AlarmText</td>
                        <td>
                            @if (alarm.Severity == 3)
                            {
                                <span class="badge bg-danger">KRİTİK</span>
                            }
                            else if (alarm.Severity == 2)
                            {

                                <span class="badge bg-warning text-dark">UYARI</span>
                            }
                            else
                            {

                                <span class="badge bg-info text-dark">BİLGİ</span>
                            }
                        </td>
                        <td class="text-end">
                            @* DÜZENLEME BURADA: İkonların yanına metin eklendi ve 'me-1' ile boşluk bırakıldı *@
                            <button class="btn btn-sm btn-primary me-1" @onclick="() => EditAlarm(alarm)">
                                <i class="bi bi-pencil me-1"></i> Düzenle
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteAlarm(alarm)">
                                <i class="bi bi-trash me-1"></i> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<AlarmDefinition>? alarms;
    private AlarmDefinition? alarmToEdit;
    private bool showEditModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadAlarms();
    }

    private async Task LoadAlarms()
    {
        try { alarms = await DataService.GetAlarmsAsync(); }
        catch (Exception ex) { Console.WriteLine($"Hata: {ex.Message}"); alarms = new List<AlarmDefinition>(); }
    }

    private void AddNewAlarm()
    {
        alarmToEdit = new AlarmDefinition { Severity = 2 };
        showEditModal = true;
    }

    private void EditAlarm(AlarmDefinition alarm)
    {
        alarmToEdit = new AlarmDefinition
        {
            Id = alarm.Id,
            AlarmNumber = alarm.AlarmNumber,
            AlarmText = alarm.AlarmText,
            Severity = alarm.Severity
        };
        showEditModal = true;
    }

    private async Task HandleSave(AlarmDefinition alarm)
    {
        try
        {
            if (alarm.Id == 0) await DataService.AddAlarmAsync(alarm);
            else await DataService.UpdateAlarmAsync(alarm);

            showEditModal = false;
            await LoadAlarms();
        }
        catch (Exception ex) { await JSRuntime.InvokeVoidAsync("alert", $"Hata: {ex.Message}"); }
    }

    private async Task DeleteAlarm(AlarmDefinition alarm)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Alarm No: {alarm.AlarmNumber} silinsin mi?"))
        {
            await DataService.DeleteAlarmAsync(alarm.Id);
            await LoadAlarms();
        }
    }
}