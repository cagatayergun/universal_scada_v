@page "/alarm-yonetimi"
@using TekstilScada.Models
@using TekstilScada.WebApp.Services
@using TekstilScada.Core.Localization
@using Microsoft.Extensions.Localization
@inject ScadaDataService DataService
@inject IJSRuntime JSRuntime
@inject IStringLocalizer<SharedResource> Loc

@if (showEditModal && alarmToEdit != null)
{
    <AlarmEditModal Alarm="alarmToEdit" OnClose="() => showEditModal = false" OnSave="HandleSave" />
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>@Loc["AlarmTanimlariBaslik"]</h4>
    <button class="btn btn-success" @onclick="AddNewAlarm">
        <i class="bi bi-bell-fill me-1"></i> @Loc["YeniAlarmEkle"]
    </button>
</div>

@if (alarms == null)
{
    <div class="text-center mt-4"><div class="spinner-border text-warning"></div><p>@Loc["AlarmlarYukleniyor"]</p></div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width: 100px;">@Loc["No"]</th>
                    <th>@Loc["AlarmMesaji"]</th>
                    <th style="width: 120px;">@Loc["Onem"]</th>
                    <th class="text-end" style="width: 180px;">@Loc["Islemler"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alarm in alarms)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@alarm.AlarmNumber</span></td>
                        <td>@alarm.AlarmText</td>
                        <td>
                            @if (alarm.Severity == 3)
                            {
                                <span class="badge bg-danger">@Loc["Sev_Yuksek"]</span>
                            }
                            else if (alarm.Severity == 2)
                            {
                                <span class="badge bg-warning text-dark">@Loc["Sev_Orta"]</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">@Loc["Sev_Dusuk"]</span>
                            }
                        </td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-primary me-1" @onclick="() => EditAlarm(alarm)">
                                <i class="bi bi-pencil me-1"></i> @Loc["Duzenle"]
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteAlarm(alarm)">
                                <i class="bi bi-trash me-1"></i> @Loc["Sil"]
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<AlarmDefinition>? alarms;
    private AlarmDefinition? alarmToEdit;
    private bool showEditModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadAlarms();
    }

    private async Task LoadAlarms()
    {
        try { alarms = await DataService.GetAlarmsAsync(); }
        catch (Exception ex) { Console.WriteLine($"{Loc["Hata"]}: {ex.Message}"); alarms = new List<AlarmDefinition>(); }
    }

    private void AddNewAlarm()
    {
        alarmToEdit = new AlarmDefinition { Severity = 2 };
        showEditModal = true;
    }

    private void EditAlarm(AlarmDefinition alarm)
    {
        alarmToEdit = new AlarmDefinition
        {
            Id = alarm.Id,
            AlarmNumber = alarm.AlarmNumber,
            AlarmText = alarm.AlarmText,
            Severity = alarm.Severity,
            
        };
        showEditModal = true;
    }

    private async Task HandleSave(AlarmDefinition alarm)
    {
        try
        {
            if (alarm.Id == 0) await DataService.AddAlarmAsync(alarm);
            else await DataService.UpdateAlarmAsync(alarm);

            showEditModal = false;
            await LoadAlarms();
        }
        catch (Exception ex) { await JSRuntime.InvokeVoidAsync("alert", $"{Loc["Hata"]}: {ex.Message}"); }
    }

    private async Task DeleteAlarm(AlarmDefinition alarm)
    {
        // String.Format benzeri kullanım ile parametreli çeviri
        string message = string.Format(Loc["AlarmSilSoru"], alarm.AlarmNumber);

        if (await JSRuntime.InvokeAsync<bool>("confirm", message))
        {
            await DataService.DeleteAlarmAsync(alarm.Id);
            await LoadAlarms();
        }
    }
}