@page "/login"
@layout EmptyLayout
@attribute [AllowAnonymous]
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
@inject CustomAuthStateProvider AuthStateProvider
@using TekstilScada.Core.Models
@using System.Text.Json
@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Authorization
@using TekstilScada.WebApp.Services
@using Microsoft.AspNetCore.Components.Forms
@using TekstilScada.WebApp.Components.Layout
@using TekstilScada.WebApp.Services
@using TekstilScada.Core.Localization
@using Microsoft.Extensions.Localization
@inject CustomAuthStateProvider AuthProvider
@inject NavigationManager NavManager
@inject IStringLocalizer<SharedResource> Loc

<div class="login-container">
    <div class="card p-4 shadow-lg">
        <h3 class="card-title text-center mb-4">@Loc["GirisYapBaslik"]</h3>
        @* KRİTİK DÜZELTME: Benzersiz bir FormName atıyoruz *@
        <EditForm Model="loginModel" OnValidSubmit="HandleLogin" FormName="loginForm">
            <DataAnnotationsValidator />
            <div class="mb-3">
                <label for="username" class="form-label">@Loc["KullaniciAdiLabel"]</label>
                <InputText id="username" class="form-control" @bind-Value="loginModel.Username" />
                <ValidationMessage For="@(() => loginModel.Username)" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">@Loc["SifreLabel"]</label>
                <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }

            <button type="submit" class="btn btn-primary w-100" disabled="@isProcessing">
                @if (isProcessing)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                }
                else
                {
                    <span>@Loc["GirisButon"]</span>
                }
            </button>
        </EditForm>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f8f9fa;
    }

    .card {
        width: 100%;
        max-width: 400px;
        border-radius: 10px;
    }
</style>

@code {
    private LoginModel loginModel = new LoginModel();
    private string errorMessage = string.Empty;
    private bool isProcessing = false;
    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    private class LoginModel
    {
        // DataAnnotations eklemedim, ancak production ortamı için eklemenizi öneririm (örneğin [Required])
        public string Username { get; set; }
        public string Password { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        // Auth provider'dan mevcut oturum durumunu al
        var authState = await AuthProvider.GetAuthenticationStateAsync();

        // Eğer kullanıcı zaten giriş yapmışsa (token'ı geçerliyse)
        if (authState.User.Identity != null && authState.User.Identity.IsAuthenticated)
        {
            // Onu login sayfasında tutma, anasayfaya yönlendir
            NavManager.NavigateTo(ReturnUrl ?? "/");
        }
    }

    private async Task HandleLogin()
    {
        isProcessing = true;
        errorMessage = string.Empty;

        bool loginSuccess = await AuthStateProvider.LoginAsync(loginModel.Username, loginModel.Password);

        if (loginSuccess)
        {
            // DÜZELTME: forceLoad: true kaldırıldı
            NavigationManager.NavigateTo("/");
        }
        else
        {
            errorMessage = Loc["GirisBasarisizHata"];
            isProcessing = false; // Sadece hata durumunda isProcessing'i false yap
            StateHasChanged(); // Hata mesajının görünmesi için UI'yı güncelle
        }
        // Başarılı durumda isProcessing = false yapmaya gerek yok, yönlendirme sayfayı zaten değiştirecek.
    }
}