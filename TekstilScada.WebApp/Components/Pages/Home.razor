@page "/proses-izleme"

@using TekstilScada.Models
@using TekstilScada.WebApp.Services
@using TekstilScada.WebApp.Components.Shared
@using TekstilScada.Core.Localization
@using Microsoft.Extensions.Localization
@inject ScadaDataService ScadaDataService
@inject NavigationManager NavManager
@inject IStringLocalizer<SharedResource> Loc
@implements IDisposable

@* 1. Detay Modalını Sayfaya Ekle *@
<MachineQuickDetailModal @bind-Show="showDetailModal"
                         MachineId="selectedMachineId"
                         OnClose="HandleModalClose" />

<PageTitle>@Loc["GenelBakis"]</PageTitle>

<h1>@Loc["GenelMakineDurumu"]</h1>

@if (ScadaDataService.MachineData.IsEmpty)
{
    <p><em>@Loc["VeriBekleniyorDetay"]</em></p>
}
else
{
    <div class="machine-grid">
        @foreach (var machineStatus in ScadaDataService.MachineData.Values.OrderBy(m => m.MachineId))
        {
            <MachineCard MachineStatus="machineStatus"
                         @key="machineStatus.MachineId"
                         @onclick="() => NavigateToDetail(machineStatus.MachineId)"
                         OnInfoClickAction="(id) => HandleInfoClickAction(id)" />
        }
    </div>
}

@code {
    private bool showDetailModal = false;
    private int selectedMachineId = 0;

    protected override void OnInitialized()
    {
        ScadaDataService.OnDataUpdated += OnDataUpdatedHandler;
    }

    private void OnDataUpdatedHandler()
    {
        InvokeAsync(StateHasChanged);
    }

    private void HandleInfoClickAction(int machineId)
    {
        selectedMachineId = machineId;
        showDetailModal = true;
        InvokeAsync(StateHasChanged);
    }

    private Task HandleModalClose()
    {
        showDetailModal = false;
        selectedMachineId = 0;
        return Task.CompletedTask;
    }

    private void NavigateToDetail(int machineId)
    {
        NavManager.NavigateTo($"/proseskontrol/{machineId}");
    }

    public void Dispose()
    {
        ScadaDataService.OnDataUpdated -= OnDataUpdatedHandler;
    }
}