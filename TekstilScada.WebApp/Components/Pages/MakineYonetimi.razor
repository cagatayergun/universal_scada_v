@using TekstilScada.Models
@using TekstilScada.WebApp.Services
@inject ScadaDataService ScadaDataService
@inject IJSRuntime JSRuntime

@* Yetkilendirme kontrolü eklenebilir *@
@* @attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")] *@

@if (showEditModal && machineToEdit != null)
{
    <MachineEditModal Machine="machineToEdit" OnClose="() => showEditModal = false" OnSave="HandleSave" />
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Makine Yönetimi</h4>
    <button class="btn btn-success" @onclick="AddNewMachine">
        <i class="bi bi-plus-circle me-1"></i> Yeni Makine Ekle
    </button>
</div>

@if (machines == null)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">Makineler yükleniyor...</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Makine Adı</th>
                    <th>IP Adresi</th>
                    <th>Port</th>
                    <th>Tipi</th>
                    <th>Durum</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var machine in machines)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@machine.MachineUserDefinedId</span></td>
                        <td class="fw-bold">@machine.MachineName</td>
                        <td>@machine.IpAddress</td>
                        <td>@machine.Port</td>
                        <td>@machine.MachineType</td>
                        <td>
                            @if (machine.IsEnabled)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-primary me-1" @onclick="() => EditMachine(machine)">
                                <i class="bi bi-pencil"></i> Düzenle
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteMachine(machine)">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<Machine>? machines;
    private Machine? machineToEdit;
    private bool showEditModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadMachines();
    }

    private async Task LoadMachines()
    {
        try
        {
            machines = await ScadaDataService.GetMachinesAsync();
        }
        catch (Exception ex)
        {
            // Hata olursa konsola yaz veya kullanıcıya bildir
            Console.WriteLine($"Veri yükleme hatası: {ex.Message}");
            machines = new List<Machine>(); // Null referans hatasını önlemek için boş liste
        }
    }

    private void AddNewMachine()
    {
        machineToEdit = new Machine
        {
            IsEnabled = true,
            Port = 502,
            FtpUsername = "cagatay", // Örnek varsayılan
            FtpPassword = "cagatay"    // Örnek varsayılan
        };
        showEditModal = true;
    }

    private void EditMachine(Machine machine)
    {
        // Düzenleme sırasında orijinal veriyi bozmamak için kopyasını oluşturuyoruz.
        // EKSİK ALANLAR BURAYA EKLENDİ:
        machineToEdit = new Machine
        {
            Id = machine.Id,
            MachineName = machine.MachineName,
            MachineUserDefinedId = machine.MachineUserDefinedId,
            IpAddress = machine.IpAddress,
            Port = machine.Port,
            MachineType = machine.MachineType,
            IsEnabled = machine.IsEnabled,

            // --- EKLENEN ALANLAR ---
            MachineSubType = machine.MachineSubType, // Reçete tasarımı için kritik
            FtpUsername = machine.FtpUsername,
            FtpPassword = machine.FtpPassword,

            VncAddress = machine.VncAddress,
            VncPassword = machine.VncPassword
        };
        showEditModal = true;
    }

    private async Task HandleSave(Machine machine)
    {
        try
        {
            if (machine.Id == 0)
            {
                await ScadaDataService.AddMachineAsync(machine);
            }
            else
            {
                await ScadaDataService.UpdateMachineAsync(machine);
            }
            showEditModal = false;
            await LoadMachines();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Kaydetme hatası: {ex.Message}");
        }
    }

    private async Task DeleteMachine(Machine machine)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"'{machine.MachineName}' makinesini silmek istediğinizden emin misiniz?");
        if (confirmed)
        {
            try
            {
                await ScadaDataService.DeleteMachineAsync(machine.Id);
                await LoadMachines();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Silme hatası: {ex.Message}");
            }
        }
    }
}