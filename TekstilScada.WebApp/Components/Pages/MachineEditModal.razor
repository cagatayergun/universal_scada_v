@using TekstilScada.Models
@using Microsoft.AspNetCore.Components.Forms

<div class="modal fade show" style="display:block; background-color: rgba(0,0,0,0.5);" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(Machine.Id == 0 ? "Yeni Makine Ekle" : "Makine Düzenle")</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>
            @* EditForm EKLENDİ: Input bileşenleri bunun içinde olmalı *@
            <EditForm Model="@Machine" OnValidSubmit="SaveChanges">
                <div class="modal-body">
                    @* Veri doğrulama hatalarını göstermek için (Opsiyonel) *@
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="mb-3">
                        <label class="form-label">Makine Adı:</label>
                        <InputText @bind-Value="Machine.MachineName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Makine ID (Kullanıcı Tanımlı):</label>
                        <InputText @bind-Value="Machine.MachineUserDefinedId" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">IP Adresi:</label>
                        <InputText @bind-Value="Machine.IpAddress" class="form-control" />
                    </div>
                    @* Port alanı eklendi *@
                    <div class="mb-3">
                        <label class="form-label">Port:</label>
                        <InputNumber @bind-Value="Machine.Port" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Makine Tipi:</label>
                        <InputSelect @bind-Value="Machine.MachineType" class="form-select">
                            <option value="">Seçiniz...</option>
                            <option value="BYMakinesi">Boya Makinesi</option>
                            <option value="Kurutma Makinesi">Kurutma Makinesi</option>
                        </InputSelect>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">VNC Adresi (Opsiyonel):</label>
                        <InputText @bind-Value="Machine.VncAddress" class="form-control" />
                    </div>
                    <div class="form-check mb-3">
                        <InputCheckbox @bind-Value="Machine.IsEnabled" class="form-check-input" />
                        <label class="form-check-label">Aktif</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Close">İptal</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
@* Arka plan karartması *@
<div class="modal-backdrop fade show"></div>

@code {
    [Parameter]
    public Machine Machine { get; set; } = new();

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback<Machine> OnSave { get; set; }

    private async Task Close() => await OnClose.InvokeAsync();
    private async Task SaveChanges() => await OnSave.InvokeAsync(Machine);
}